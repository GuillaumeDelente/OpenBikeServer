<web-app version='2.5' xmlns='http://java.sun.com/xml/ns/javaee'>
  <servlet>
    <servlet-name>OpenBikeServer</servlet-name>
    <servlet-class>org.restlet.ext.servlet.ServerServlet</servlet-class>
    <init-param>
      <param-name>org.restlet.application</param-name>
      <param-value>fr.openbike.OpenBikeServer</param-value>
    </init-param>
  </servlet>
  <servlet>
    <servlet-name>update</servlet-name>
    <servlet-class>fr.openbike.servlet.Update</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>update</servlet-name>
    <url-pattern>/internal/update</url-pattern>
  </servlet-mapping>
    <servlet>
    <servlet-name>updateVcub</servlet-name>
    <servlet-class>fr.openbike.servlet.UpdateVcub</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>updateVcub</servlet-name>
    <url-pattern>/internal/updateVcub</url-pattern>
  </servlet-mapping>
  <security-constraint>
    <web-resource-collection>
      <url-pattern>/internal/*</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>admin</role-name>
    </auth-constraint>
  </security-constraint>
  <security-constraint>
    <web-resource-collection>
      <url-pattern>/insertnetwork.jsp</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>admin</role-name>
    </auth-constraint>
  </security-constraint>
  <servlet-mapping>
    <servlet-name>OpenBikeServer</servlet-name>
    <url-pattern>/*</url-pattern>
  </servlet-mapping>
</web-app>